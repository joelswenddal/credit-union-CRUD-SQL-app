<html>
<div class="container">
    <div class="row">
        <h1>Manage Transactions</h1>
        <p>This page allows you to add transactions</p>
        <p><b>Note:</b><i> Please use Google Chrome for navigating the site.</i></p>
    </div>
    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">

                    <tr>
                        <th scope="col">Transaction ID</th>
                        <th scope="col">Account ID</th>
                        <th scope="col">Date/Time Stamp</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Transaction Type</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                    <tr>
                        <td id="transactionID" value="{{transaction_ID}}">{{transaction_ID}}</td>
                        <td>{{account_ID}}</td>
                        <td>{{date_time}}</td>
                        <td>${{amount}}</td>
                        <td>{{transaction_type}}</td>

                        <!--For dev, DELETE and UPDATE transactions
                            <td><a href="/transactions/update/{{transaction_ID}}" class="btn btn-secondary" role="button"
                                aria-pressed="true">Update</a>
                        <td><button onclick="deleteTransaction({{transaction_ID}})"
                                class="btn btn-secondary">Delete</button></td> -->
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <form action="/transactions" method="POST">
                    <fieldset>
                        <legend>Add a Transaction</legend>

                        <!-- post project input verification
                                <div class="mb-3">
                                <label>Account ID
                                    <input type="text" name="accountID" size="20" maxlength="30" required="required" class = "form-select" placeholder = "Insert valid account ID">
                                </label>
                            </div>
                            -->
                        <div class="mb-3">
                            <label>Account ID
                                <select name="accountID" id="accountID" class="form-select"
                                    aria-label="Default select example">
                                    {{#each accounts}}
                                    <option value="{{account_ID}}"> {{account_ID}}</option>
                                    {{/each}}
                                </select>
                            </label>
                        </div>

                        <div class="mb-3">
                            <label>Amount
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" name="amount" step="0.01" class="form-control"
                                        placeholder="0.00" required>
                                </div>
                            </label>
                        </div>

                        <div class="mb-3">
                            <label>Transaction Type
                                <select name="transactionType" id="transactionType" class="form-select"
                                    aria-label="Default select example">
                                    <option value="Deposit" selected>Deposit</option>
                                    <option value="Withdrawal">Withdrawal</option>
                                </select>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-secondary" value="createTransaction">ADD</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

</html>