
<html>
    <div class="container">
        <div class="row">
            <h1>Manage Transactions</h1>
            <p>This page allows you to add transactions</p>
        </div>
        <div class="row-justify-content-center">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">

                        <tr>
                            <th scope="col">Transaction ID</th>
                            <th scope="col">Account ID</th>
                            <th scope="col">Date/Time Stamp</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Transaction Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each transactions}}
                        <tr>
                            <th>{{transaction_ID}}</th>
                            <td>{{account_ID}}</td>
                            <td>{{date_time}}</td>
                            <td>${{amount}}</td>
                            <td>{{transaction_type}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <form action="/transactions" method="POST">
                        <fieldset>
                            <legend>Add a Transaction</legend>
                            <div class="mb-3">
                                <label>Account ID
                                    <input type="text" name="accountID" size="20" maxlength="30" required="required">
                                </label>
                            </div>
                            <div class="mb-3">
                                <label>Amount
                                    <input type="text" name="amount" size="20" maxlength="30" required="required">
                                </label>
                            </div>
                            <div class="mb-3">
                                <label>Transaction Type
                                    <input type="text" name="transactionType" size="20" maxlength="30"
                                        required="required">
                                </label>
                            </div>
                            <button type="submit" class="btn btn-secondary" value="createTransaction">ADD</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>