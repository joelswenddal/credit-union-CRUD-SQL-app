<html>
    <div class="container">
        <div class="row">
            <h1>Manage Offers</h1>
            <p>This page allows you to add offers</p>
        </div>
        <div class="row-justify-content-center">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Offer ID</th>
                            <th scope="col">Chequebook</th>
                            <th scope="col">No Fee Transactions</th>
                            <th scope="col">Sign Up Bonus</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each special_offers}}
                        <tr>
                            <th>{{offer_ID}}</th>
                            <td>{{chequebook}}</td>
                            <td>{{no_fee_transactions}}</td>
                            <td>${{sign_up_bonus}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <form action="/special_offers" method="POST">
                <fieldset>
                    <legend>Add Offer</legend>
                    <div class="mb-3">
                        <label>Chequebook
                            <input type="text" name="chequebook" size="10" maxlength="30">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>No Fee Transactions
                            <input type="text" name="noFeeTransactions" size="10" maxlength="30">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Sign Up Bonus
                            <input type="text" name="signUpBonus" size="10" maxlength="30">
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="CreateOffer">ADD</button>
                </fieldset>
            </form>
        </div>
    </div>
</html>