<html>
    <div class="container">
        <div class="row">
            <h1>Manage Offers</h1>
            <p>This page allows you to add offers</p>
        </div>
        <div class="row-justify-content-center">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Offer ID</th>
                            <th scope="col">Chequebook</th>
                            <th scope="col">No Fee Transactions</th>
                            <th scope="col">Sign Up Bonus</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each special_offers}}
                        <tr>
                            <td>{{offer_ID}}</td>
                            <td>{{chequebook}}</td>
                            <td>{{no_fee_transactions}}</td>
                            <td>${{sign_up_bonus}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <form action="/special_offers" method="POST">
                <fieldset>
                    <legend>Add Offer</legend>
                
                    <div class = "mb-3">
                        <label>Chequebook
                            <select name = "chequebook" id = "chequebook" class="form-select" aria-label="Default select example">
                                <option value="No"selected>No</option>
                                <option value="Yes"> Yes </option>
                            </select>
                        </label>
                    </div> 

                    <div class = "mb-3">
                        <label>No Fee Transactions
                            <select name = "noFeeTransactions" id = "noFeeTransactions" class="form-select" aria-label="Default select example">
                                <option value="No"selected>No</option>
                                <option value="Yes"> Yes </option>
                            </select>
                        </label>
                    </div> 

                    <div class="mb-3">
                        <label>Sign Up Bonus
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                    <input type="number" name="signUpBonus" class="form-control" min ="0" max ="1000">
                            </div>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-secondary" value="CreateOffer">ADD</button>
                </fieldset>
            </form>
        </div>
    </div>
</html>