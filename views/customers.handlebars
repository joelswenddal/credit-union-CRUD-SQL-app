<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Home: Credit Union DB</title>
</head>

<div class="container">
    <div class="row">
        <h1>Manage Customers</h1>
        <p>This page allows you to add/edit/delete customers or filter search results by State</p>
    </div>
    <div class="row">
        <div class = "mb-3">
            <label>Filter By State
                <select name = "state" id = "state" class="form-select" aria-label="Default select example" >
                    <option value= "NULL" selected> -- None -- </option>
                    {{#each states}}
                    <option value= "{{state}}"> {{state}}</option>
                    {{/each}}
                </select>
            </label>
            <button onclick="deleteCustomer({{state}})" class="btn btn-secondary">Filter</button>
        </div> 
    </div>

    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Customer ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">SSN</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Street Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td>{{customer_ID}}</td>
                        <td>{{first_name}}</td>
                        <td>{{middle_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{ssn}}</td>
                        <td>{{dob}}</td>
                        <td>{{street_address}}</td>
                        <td>{{city}}</td>
                        <td class="text-uppercase">{{state}}</td>
                        <td>{{zip}}</td>
                        <td>{{phone_number}}</td>
                        <td>{{email}}</td>
                        <td><a href="/customers/{{customer_ID}}" class="btn btn-secondary" role="button"
                                aria-pressed="true">Update</a>
                        <td><button onclick="deleteCustomer({{customer_ID}})" class="btn btn-secondary">Delete</button></td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <form id="addcustomer" action="/customers" method="POST">
                <fieldset>
                    <legend>Add a Customer</legend>
                    <div class="mb-3">
                        <label>First Name
                            <input type="text" name="firstName" maxlength="30" required="required" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Middle Name
                            <input type="text" name="middleName" maxlength="30" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Last Name
                            <input type="text" name="lastName" maxlength="30" required="required" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>SSN (No Hyphens)
                            <input type="text" name="ssn" minlength="9" maxlength="9" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>DOB
                            <input type="date" name="dob" maxlength="11" required="required" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Street Address
                            <input type="text" name="street" maxlength="80" required="required" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>City
                            <input type="text" name="city" maxlength="30" required="required" class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>State
                            <input type="text" name="state" maxlength="2" required="required"
                                class="form-control text-uppercase">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Zip
                            <input type="number" name="zip" maxlength="5" class="form-control" min="00001">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Phone
                            <input type="text" name="phone" maxlength="10" required="required" class="form-control ">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Email
                            <input type="email" name="email" maxlength="40" required="required"
                                placeholder="joesmith@example.com" class="form-control">
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="CreateCustomer">ADD</button>
                </fieldset>
            </form>
        </div>

        <div class="col">
            <form action="/customers" method="POST">
                <fieldset>
                    <legend>Search for Customer</legend>
                    <div class="mb-3">
                        <label>First Name
                            <input type="text" name="firstName" size="20" maxlength="30" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Middle Name
                            <input type="text" name="middleName" size="20" maxlength="30" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Last Name
                            <input type="text" name="lastName" size="20" maxlength="30" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>SSN
                            <input type="text" name="ssn" size="15" maxlength="11" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>DOB
                            <input type="date" name="dob" size="30" maxlength="40" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="SearchCustomer">SEARCH</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
</div>

</html>