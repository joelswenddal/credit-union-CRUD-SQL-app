<html>
<div class="container">
    <div class="row">
        <h1>Manage Customers</h1>
        <p>This page allows you to manage customers</p>
    </div>
    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Customer ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">SSN</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Street Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td>{{customer_ID}}</td>
                        <td>{{first_name}}</td>
                        <td>{{middle_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{ssn}}</td>
                        <td>{{dob}}</td>
                        <td>{{street_address}}</td>
                        <td>{{city}}</td>
                        <td>{{state}}</td>
                        <td>{{zip}}</td>
                        <td>{{phone_number}}</td>
                        <td>{{email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <form id="addcustomer" action="/customers" method="POST" >
                <fieldset>
                    <legend>Add a Customer</legend>
                    <div class="mb-3">
                        <label>First Name
                            <input type="text" name="firstName" maxlength="30" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Middle Name
                            <input type="text" name="middleName" maxlength="30" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Last Name
                            <input type="text" name="lastName"  maxlength="30" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>SSN
                            <input type="text" name="ssn" maxlength="11" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>DOB
                            <input type="date" name="dob" maxlength="11" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Street Address
                            <input type="text" name="street"  maxlength="80" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>City
                            <input type="text" name="city"  maxlength="30" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>State
                            <input type="text" name="state"  maxlength="2" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Zip
                            <input type="number" name="zip"  maxlength="5" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Phone
                            <input type="text" name="phone" maxlength="10" required="required" class = "form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Email
                            <input type="email" name="email"  maxlength="40" required="required"
                                placeholder="joesmith@example.com" class = "form-control">
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="CreateCustomer">ADD</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
</div>
</html>