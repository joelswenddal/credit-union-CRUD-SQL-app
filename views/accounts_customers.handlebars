<html>
<div class="container">
    <div class="row">
        <h1>Manage Accounts_Customers</h1>
        <p>This page allows you to add/remove Account_Customer entries</p>
    </div>
    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Account ID</th>
                        <th scope="col">Customer ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each accounts_customers}}
                    <tr>
                        <td scope="row">{{account_ID}}</td>
                        <td scope="row">{{customer_ID}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/accounts_customers" method="POST">
                <fieldset>
                    <legend>Add a Customer to an existing Account</legend>
                    <div class="mb-3">
                        <label>Customer ID
                            <input type="number" name="customerId" maxlength="9" required="required" class = "form-control"placeholder="Input valid Customer ID">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Account ID
                            <input type="number" name="accountId" maxlength="9" required="required" class = "form-control" placeholder="Input valid Account ID">
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="CreateAccount_Customer">CREATE</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

</html>