<html>
<div class="container">
    <div class="row">
        <h1>Manage Accounts_Customers</h1>
        <p>This page allows you to add/remove Account_Customer entries</p>
    </div>
    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Account ID</th>
                        <th scope="col">Customer ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each accounts_customers}}
                    <tr>
                        <td scope="row">{{account_ID}}</td>
                        <td scope="row">{{customer_ID}}</td>
                        <td><button onclick ="deleteAccountCustomer({{customer_ID}}, {{account_ID}})" class="btn btn-secondary">Delete</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/accounts_customers" method="POST">
                <fieldset>
                    <legend>Add a Customer to an existing Account</legend>
                    
                    <!-- post project input verification
                    <div class="mb-3">
                        <label>Account ID
                            <input type="number" name="accountID" maxlength="9" required="required" class = "form-control" placeholder="Input valid Account ID">
                        </label>
                    </div>

                    <div class="mb-3">
                        <label>Customer ID
                            <input type="number" name="customerID" maxlength="9" required="required" class = "form-control"placeholder="Input valid Customer ID">
                        </label>
                    </div>
                    -->

                    <div class = "mb-3">
                        <label>Account ID
                            <select name = "accountID" id = "accountID" class="form-select" aria-label="Default select example">
                                {{#each accounts}}
                                <option value= "{{account_ID}}"> {{account_ID}}</option>
                                {{/each}}
                            </select>
                        </label>
                    </div> 

                    <div class = "mb-3">
                        <label>Customer ID
                            <select name = "customerID" id = "customerID" class="form-select" aria-label="Default select example">
                                {{#each customers}}
                                <option value= "{{customer_ID}}"> {{customer_ID}}</option>
                                {{/each}}
                            </select>
                        </label>
                    </div> 


                    
                    <button type="submit" class="btn btn-secondary" value="CreateAccount_Customer">ADD</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

</html>