<html>
    <div class="container">
        <div class="row">
            <h1>Manage Account Types</h1>
            <p>This page allows you to add account types</p>
        </div>
        <div class="row-justify-content-center">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Account Type</th>
                            <th scope="col">Interest Rate</th>
                            <th scope="col">Special Offer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each account_types}}
                        <tr>
                            <th>{{account_type}}</th>
                            <td>{{interest_rate}}%</td>
                            <td>{{offer_ID}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form action="http://localhost:3000/account_types" method="POST">
                    <fieldset>
                        <legend>Add Account Type</legend>
                        <div class="mb-3">
                            <label>Type Name
                                <input type="text" name="TypeName" size="20" maxlength="30" required="required">
                            </label>
                        </div>
                        <div class="mb-3">
                            <label>Associated Interest Rate
                                <input type="Text" name="InterestRate" size="20" maxlength="30" required="required">
                            </label>
                        </div>
                        <div class="mb-3">
                            <label>Special Offer
                                <input type="Text" name="SpecialOffer" size="20" maxlength="30">
                            </label>
                        </div>
                        <button type="submit" class="btn btn-secondary" value="CreateAccountType">ADD</button>
                    </fieldset>
                </form>
            </div>
            <div class="col">
                <form action="http://localhost:3000/account_types" method="POST">
                    <fieldset>
                        <legend>Edit Account Type</legend>
                        <div class="mb-3">
                            <label>Type Name
                                <input type="text" name="TypeName" size="20" maxlength="30" required="required">
                            </label>
                        </div>
                        <div class="mb-3">
                            <label>Associated Interest Rate
                                <input type="Text" name="InterestRate" size="20" maxlength="30" required="required">
                            </label>
                        </div>
                        <div class="mb-3">
                            <label>Special Offer
                                <input type="Text" name="SpecialOffer" size="20" maxlength="30">
                            </label>
                        </div>
                        <button type="submit" class="btn btn-secondary" value="EditAccountType">EDIT</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</html>
  