<html>
<div class="container">
    <div class="row">
        <h1>Manage Account Types</h1>
        <p>This page allows you to add account types</p>
    </div>
    <div class="row-justify-content-center">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Account Type</th>
                        <th scope="col">Interest Rate</th>
                        <th scope="col">Special Offer</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each account_types}}
                    <tr>
                        <td>{{account_type}}</td>
                        <td>{{interest_rate}}%</td>
                        <td>{{offer_ID}}</td>
                        <td><a href="/account_types/update/{{account_type}}" class="btn btn-secondary" role="button"
                                aria-pressed="true">Update</a>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="addaccounttype" action="/account_types" method="POST">
                <fieldset>
                    <legend>Add Account Type</legend>
                    <div class="mb-3">
                        <label>Type Name
                            <input type="text" name="accountType" size="20" maxlength="30" required="required"
                                class="form-control">
                        </label>
                    </div>
                    <div class="mb-3">
                        <label>Associated Interest Rate
                            <div class="input-group">
                                <input type="number" name="interestRate" step="0.01" size="20" maxlength="30"
                                    required="required" class="form-control">
                                <span class="input-group-text">%</span>
                            </div>
                        </label>
                    </div>

                    <div class="mb-3">
                        <label>Special Offer
                            <select name="offerID" id="offers" class="form-select" aria-label="Default select example">
                                <option value="NULL" selected> -- None -- </option>
                                {{#each offers}}
                                <option value="{{offer_ID}}"> {{offer_ID}}</option>
                                {{/each}}
                            </select>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-secondary" value="CreateAccountType">ADD</button>
                </fieldset>
            </form>
        </div>

